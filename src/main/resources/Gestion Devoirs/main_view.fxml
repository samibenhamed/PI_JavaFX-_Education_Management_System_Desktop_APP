<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.MainController"
            stylesheets="@/styles/style.css">

    <!-- Barre du haut -->
    <top>
        <HBox spacing="20" style="-fx-padding: 10; -fx-alignment: CENTER_LEFT;">
            <!-- Logo + texte -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="40" fitWidth="40" styleClass="logo">
                    <Image url="@/resources/Gestion Devoirs/images/image.png"/>
                </ImageView>
                <Label text="" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            </HBox>

            <!-- Boutons menus -->
            <Button text="📚 Devoirs" styleClass="menu-button" onAction="#showDevoirView"/>
            <Button text="📝 Soumissions" styleClass="menu-button" onAction="#showSoumissionView"/>
            <Button text="📊 Statistiques" styleClass="menu-button" onAction="#ouvrirStatistiques"/>
        </HBox>
    </top>

    <!-- Zone centrale -->
    <center>
        <StackPane fx:id="contentPane" id="contentPane"/>
    </center>
</BorderPane>
