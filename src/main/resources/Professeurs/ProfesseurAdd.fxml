<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProfesseursControllers.AddController">
    <children>
        <VBox alignment="CENTER" layoutX="-2.0" prefHeight="400.0" prefWidth="129.0">
            <children>
                <Button fx:id="returnButton" mnemonicParsing="false" onAction="#handleReturn" styleClass="return-button" text="RETURN" />
            </children>
        </VBox>
        <AnchorPane layoutX="127.0" layoutY="1.0" prefHeight="400.0" prefWidth="472.0">
            <children>
                <Label layoutX="23.0" layoutY="53.0" styleClass="form-label" text="Nom:" />
                <TextField fx:id="nomField" layoutX="132.0" layoutY="64.0" styleClass="input-field" />

                <Label layoutX="23.0" layoutY="104.0" styleClass="form-label" text="Email:" />
                <TextField fx:id="emailField" layoutX="132.0" layoutY="112.0" styleClass="input-field" />

                <Label layoutX="23.0" layoutY="164.0" styleClass="form-label" text="Spécialité:" />
                <TextField fx:id="specialiteField" layoutX="132.0" layoutY="172.0" styleClass="input-field" />

                <Button fx:id="ajouterButton" layoutX="350.0" layoutY="311.0" mnemonicParsing="false" onAction="#handleAjouter" styleClass="add-button" text="AJOUTER" />
                <Label fx:id="errorLabel"
                       textFill="red"
                       style="-fx-font-size: 12px;"
                       visible="false" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
