        <!-- Address -->
        <Label layoutX="111.0" layoutY="208.0" text="Address : " />
        <TextField fx:id="address" layoutX="180.0" layoutY="204.0" prefHeight="25.0" prefWidth="407.0" />

        <!-- Phone -->
        <Label layoutX="111.0" layoutY="241.0" text="Phone : " />
        <TextField fx:id="phone" layoutX="180.0" layoutY="237.0" prefHeight="25.0" prefWidth="407.0" />

        <!-- National ID -->
        <Label layoutX="112.0" layoutY="279.0" text="National ID : " />
        <TextField fx:id="nationalId" layoutX="180.0" layoutY="275.0" prefHeight="25.0" prefWidth="407.0" />

        <!-- User Type -->
<!--        <Label layoutX="112.0" layoutY="347.0" text="User Type : " />-->
<!--        <ComboBox fx:id="userTypeComboBox" layoutX="181.0" layoutY="343.0" onAction="#onSelectedUserType" prefHeight="25.0" prefWidth="407.0" promptText="user type" />-->

        <!-- Gender -->
        <Label layoutX="113.0" layoutY="311.0" text="Gender:" />
        <ComboBox fx:id="gender" layoutX="181.0" layoutY="307.0" prefHeight="25.0" prefWidth="407.0" promptText="Gender" />

        <!-- Specialty (visible when Teacher) -->
        <Label fx:id="specialtyLabel" layoutX="113.0" layoutY="387.0" text="Specialty : " visible="false" />
        <TextField fx:id="specialty" layoutX="180.0" layoutY="383.0" prefHeight="25.0" prefWidth="407.0" visible="false" />

        <!-- Class (visible when Student) -->
        <Label fx:id="classLabel" layoutX="113.0" layoutY="387.0" text="Class : " visible="false" />
        <ComboBox fx:id="studentClass" layoutX="179.0" layoutY="383.0" prefHeight="25.0" prefWidth="407.0" promptText="Class" visible="false" />
    </children>
</AnchorPane>
