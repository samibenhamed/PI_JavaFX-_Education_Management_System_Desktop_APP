<AnchorPane prefHeight="596.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateUserController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="101.0" layoutY="-2.0" prefHeight="25.0" prefWidth="498.0" style="-fx-background-color: #edf2ef;" text="Update User" textAlignment="CENTER" />

        <Button layoutX="547.0" layoutY="560.0" mnemonicParsing="false" onAction="#saveUser" text="SAVE" />

        <!-- First Name -->
        <Label layoutX="111.0" layoutY="44.0" text="First Name :" />
        <TextField fx:id="firstName" layoutX="181.0" layoutY="40.0" prefHeight="25.0" prefWidth="407.0" />

        <!-- Last Name -->
        <Label layoutX="111.0" layoutY="80.0" text="Last Name :" />
        <TextField fx:id="lastName" layoutX="181.0" layoutY="76.0" prefHeight="25.0" prefWidth="407.0" />

        <!-- Email -->
        <Label layoutX="111.0" layoutY="114.0" text="Email : " />
        <TextField fx:id="email" layoutX="181.0" layoutY="110.0" prefHeight="25.0" prefWidth="407.0" />

        <!-- Password -->
        <Label layoutX="111.0" layoutY="146.0" text="Password : " />
        <PasswordField fx:id="password" layoutX="181.0" layoutY="142.0" prefHeight="25.0" prefWidth="407.0" />

        <!-- Birthdate -->
        <Label layoutX="111.0" layoutY="174.0" text="Birthdate : " />
