<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.Conroller.MatiereController"
      prefWidth="600.0" prefHeight="400.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TableView fx:id="tableMatiere" prefHeight="200.0">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="200"/>
            <TableColumn fx:id="colCoef" text="Coefficient" prefWidth="150"/>
            <TableColumn fx:id="colHeures" text="Nb Heures" prefWidth="150"/> <!-- ✅ Nouvelle colonne -->
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="txtNom" promptText="Nom de la matière"/>
        <TextField fx:id="txtCoef" promptText="Coefficient"/>
        <TextField fx:id="txtHeures" promptText="Nombre d'heures"/> <!-- ✅ Nouveau champ -->
    </HBox>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#ajouterMatiere"/>
        <Button text="Modifier" onAction="#modifierMatiere"/>
        <Button text="Supprimer" onAction="#supprimerMatiere"/>
        <Button text="Réinitialiser" onAction="#reinitialiser"/>
    </HBox>
</VBox>
